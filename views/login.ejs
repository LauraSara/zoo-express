  <div class="container">

    <div class="row">
      <form id="form-login" action="/login" method="POST" class="col s6">´
        <h4>Ingrese a la plataforma</h4>
        <div class="row">
          <div class="input-field col s12">
            <input name="email" type="email" class="validate" required>
            <label for="email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input name="password" type="password" class="validate" required>
            <label for="email">Contraseña</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input type="submit" class="waves-effect waves-light btn">
          </div>
        </div>
      </form>
      <form id="form-register" action="/register" name="form" method="POST" class="col s6" onSubmit="return verificarClave()">´
        <h4>Registrese en nuestra plataforma</h4>
        <div class="row">
          <div class="input-field col s12">
            <input name="name" type="text" class="validate" required>
            <label for="email">Nombre</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input name="email" type="email" class="validate" required>
            <label for="email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input name="password" type="password" class="validate" minlength="3" required>
            <label for="email">Contraseña</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input name="password_confirm" type="password" class="validate" required>
            <label for="email">Confirme Contraseña</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input type="submit" id="loginc" class="waves-effect waves-light btn"  >
          </div>
        </div>
      </form>
    </div>

  </div>   
  
