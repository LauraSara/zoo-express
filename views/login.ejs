    //para verificar que las contraseñas ingresadas sean iguales
    function verificarClave(){
      let password = document.form.password.value;
      let password_confirm = document.form.password_confirm.value;

      if (password != password_confirm) {
        alert ("Las contraseñas no coinciden");
        document.form
        return false;
      }else {
        document.form.submit;
        return true;
      }
    }
  </script>
